# build engine
cd client/engine.io
make build
cd ../../

# compile
coffee -j vein.js -c client/cookies.coffee client/vein.coffee

# prepend deps
cat client/engine.io/dist/engine.io.js | cat - vein.js > /tmp/out && mv /tmp/out vein.js

uglifyjs -nc --unsafe -mt -o vein.min.js vein.js
echo "File size (minified): " && cat vein.min.js | wc -c
echo "File size (gzipped): " && cat vein.min.js | gzip -9f  | wc -c
cp ./vein.js ./examples/chat/vein.js